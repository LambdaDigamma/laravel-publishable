{
    "name": "lambdadigamma/laravel-publishable",
    "description": "A Laravel Eloquent model trait for publishing and unpublishing",
    "keywords": [
        "laravel",
        "laravel-publishable",
        "publish",
        "unpublish",
        "models",
        "cms",
        "scope"
    ],
    "license": "MIT",
    "homepage": "https://github.com/lambdadigamma/laravel-publishable",
    "type": "library",
    "support": {
        "issues": "https://github.com/lambdadigamma/laravel-publishable/issues",
        "source": "https://github.com/lambdadigamma/laravel-publishable"
    },
    "authors": [
        {
            "name": "Lennart Fischer",
            "email": "github@lambdadigamma.com"
        }
    ],
    "require": {
        "php": "^8.0|^8.1|^8.2",
        "illuminate/support": "^8.0 || ^9.0 || ^10.0",
        "illuminate/database": "^8.0 || ^9.0 || ^10.0"
    },
    "require-dev": {
        "illuminate/pagination": "^v9.52.0|| ^v10.0.0",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^1.10",
        "phpunit/phpunit": "^9.0|^10.0",
        "spatie/test-time": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "LaravelPublishable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelPublishable\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest --colors=always"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelPublishable\\LaravelPublishableServiceProvider"
            ]
        }
    }
}
